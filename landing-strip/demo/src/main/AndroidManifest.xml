<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.novoda.landing_strip">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">

    <activity android:name="com.novoda.landingstrip.NoFragmentsSimpleTextTabActivity">
      <intent-filter android:label="LS: No Fragments">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.novoda.landingstrip.SimpleTextTabActivity">
      <intent-filter android:label="LS: Simple Text Tab">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.novoda.landingstrip.CustomTabActivity">
      <intent-filter android:label="LS: Custom Tab">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.novoda.landingstrip.CustomLandingStrip">
      <intent-filter android:label="LS: Custom LS">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.novoda.landingstrip.FixedWidthTabActivity">
      <intent-filter android:label="LS: Fixed Width LS">
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

  </application>

</manifest>
