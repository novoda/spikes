<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <!-- Wrap content is not full supported yet so we need to wrap the tabs in a layout in order to get a full width background -->
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_dark">

    <com.novoda.landingstrip.ExampleRainbowLandingStrip
      android:id="@+id/landing_strip"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      app:indicatorColor="@android:color/white"
      app:tabLayoutId="@layout/tab_simple_text" />

  </FrameLayout>

  <android.support.v4.view.ViewPager
    android:id="@+id/view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>
