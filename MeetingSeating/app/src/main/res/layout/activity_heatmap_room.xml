<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.novoda.frankboylan.meetingseating.rooms.heatmap.HeatmapSeatListActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_heatmap"
    style="@style/AppToolbar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

  <ListView
    android:id="@+id/lv_seat_heatmap"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_heatmap"
    app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
