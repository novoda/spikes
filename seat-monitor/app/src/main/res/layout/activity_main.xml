<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.blundell.mra.MainActivity">

  <AbsoluteLayout
    android:id="@+id/absolute_hacks"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/imageView_blueprint"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toTopOf="@+id/navigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/message"
      app:srcCompat="@drawable/blueprint" />

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toTopOf="@+id/navigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/message"
      tools:srcCompat="@drawable/liverpool_downstairs" />

  </AbsoluteLayout>

  <TextView
    style="@android:style/TextAppearance.DeviceDefault.Large"
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Liverpool - Downstairs meeting room"
    app:layout_constraintEnd_toStartOf="@+id/absolute_hacks"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/absolute_hacks"
    app:layout_constraintTop_toTopOf="@+id/absolute_hacks" android:paddingTop="20dip"/>

</android.support.constraint.ConstraintLayout>
