<?xml version="1.0" encoding="utf-8"?>
<com.odai.architecturedemo.cats.view.CatEntryView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:gravity="center">

  <ImageView
    android:id="@+id/avatar"
    android:layout_width="70dp"
    android:layout_height="70dp" />

  <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catLabel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="10dp"
    android:textColor="@color/colorPrimaryDark" />

  <ImageView
    android:id="@+id/favouriteIndicator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@android:drawable/star_big_off" />

</com.odai.architecturedemo.cats.view.CatEntryView>
