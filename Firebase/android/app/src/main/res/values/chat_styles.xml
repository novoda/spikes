<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Chat" />

  <style name="Chat.RecyclerView">
    <item name="android:background">@color/background_grey</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:paddingBottom">72dp</item>
  </style>

  <style name="Chat.NewMessage" />

  <style name="Chat.NewMessage.Layout">
    <item name="android:background">@drawable/oval_shape_white</item>
    <item name="android:elevation">4dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingStart">12dp</item>
    <item name="android:paddingEnd">12dp</item>
  </style>

  <style name="Chat.NewMessage.Text">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textSize">@dimen/chat_new_message_text_size</item>
  </style>

  <style name="Chat.Message" />

  <style name="Chat.Message.BodyLayout">
    <item name="android:paddingTop">@dimen/chat_message_body_padding</item>
  </style>

  <style name="Chat.Message.Body">
    <item name="android:paddingStart">26dp</item>
    <item name="android:paddingEnd">10dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textColor">@color/text_black</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="Chat.Message.Body.Self">
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingEnd">26dp</item>
  </style>

  <style name="Chat.Message.Photo">
    <item name="android:scaleType">fitCenter</item>
  </style>

  <style name="Chat.Message.Metadata">
    <item name="android:gravity">end</item>
    <item name="android:paddingEnd">70dp</item>
  </style>

  <style name="Chat.Message.Metadata.Self">
    <item name="android:gravity">end</item>
  </style>

  <style name="Chat.Message.Author">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/text_grey</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="Chat.Message.Time">
    <item name="android:paddingStart">8dp</item>
    <item name="android:textColor">@color/text_grey_light</item>
    <item name="android:textSize">10sp</item>
  </style>

</resources>
