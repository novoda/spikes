<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
    parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.ActionBar"
    parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:background">@color/colorPrimary</item>
    <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
    <item name="android:textColorSecondary">?android:attr/textColorPrimaryInverse</item>
    <item name="actionMenuTextColor">?android:attr/textColorPrimaryInverse</item>
  </style>

  <style name="AppTheme.ActionBar.Inverted"
    parent="AppTheme.ActionBar">
    <item name="android:background">@android:color/white</item>
    <item name="android:textColorPrimary">@color/colorPrimary</item>
    <item name="android:textColorSecondary">@color/colorAccent</item>
    <item name="actionMenuTextColor">@color/colorPrimary</item>
  </style>

</resources>
